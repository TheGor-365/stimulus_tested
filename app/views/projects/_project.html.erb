<div id="<%= dom_id project %>" class="col-7">
  <div class="shadow rounded p-5 bg-light">

    <h3 class="text-muted mb-3">
      <%= project.name %>
    </h3>

    <div class="card bg-white p-3 mb-3">
      <p><%= project.description %></p>
    </div>

    <small>Status:</small>
    <% if project.completed %>
      <small class="float-end text-success">
        completed
      </small><br>
    <% else %>
      <small class="float-end text-danger">
        not completed
      </small><br>
    <% end %>

    <small>Started:</small>
    <small class="text-success float-end">
      <%= project.created_at.to_date %>
    </small><br>

    <small>End time:</small>
    <small class="text-danger float-end">
      <%= project.end_time.to_date %>
    </small><br>

    <% if project.completed %>
      <small>Finished:</small>
      <small class="text-muted float-end">
        <%= project.updated_at.to_date %>
      </small><br>
    <% end %>

    <small>Duration </small>
    <small class="text-muted float-end">
      <%= time_ago_in_words project.created_at %>
    </small><hr>

    <%= link_to "Details", project_calendar_path(project), class: "text-success" %>
  </div>

  <div class="shadow rounded p-5 mt-5 bg-light">
    <h5 class="text-muted mb-3">
      <%= project.name %> tasks:
    </h5>
    <ol>
      <% project.tasks.each do |project_task| %>
        <li class="mb-5">

          <div class="card bg-white p-3 mb-3">
            <%= project_task.description %>
          </div>

          <small>Status:</small>
          <% if project_task.completed %>
            <small class="float-end text-success">
              completed
            </small><br>
          <% else %>
            <small class="float-end text-danger">
              not completed
            </small><br>
          <% end %>

          <small>Started:</small>
          <small class="text-success float-end">
            <%= project_task.created_at.to_date %>
          </small><br>

          <small>End task:</small>
          <small class="text-danger float-end">
            <%= project_task.end_time.to_date %>
          </small><br>

          <% if project_task.completed %>
            <small>Finished:</small>
            <small class="text-muted float-end">
              <%= project.updated_at.to_date %>
            </small><br>
          <% end %>

          <small>Duration </small>
          <small class="text-muted float-end">
            <%= time_ago_in_words project_task.created_at %>
          </small><hr>

          <%= link_to "See More", project_task, class: "text-success" %>
        </li>
      <% end %>
    </ol>
  </div>
</div>
