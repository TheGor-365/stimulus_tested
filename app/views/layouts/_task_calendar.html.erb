<div class="rounded shadow p-5 bg-light">
  <%= month_calendar(events: @tasks) do |date, tasks| %>

    <div class="text-center">
      <%= date.day %>
    </div>

    <% tasks.each do |task| %>
      <div class="p-3">

        <div class="card-header card">
          <div class="card-name">
            <strong>
              <%= link_to task.name, task, class: "text-dark" %>
            </strong>
          </div>
        </div>

        <div class="card-body card">
          <small class="card-text">
            <%= task.description %>
          </small>
        </div>

        <div class="border text-muted mb-3 px-3 bg-white pt-2">
          <small class="card-text">
            From:
          </small>
          <small class="float-end">
            <%= task.start_time.to_s(:time) %>
          </small><br>
          <small class="card-text">
            To:
          </small>
          <small class="float-end">
            <%= task.end_time.to_s(:time) %>
          </small>
        </div>
      </div>

      <%= link_to task_week_calendar_path do %>
        <small class="card p-2 bg-footer-cal text-center">
          <%= date.strftime('%d %B %a') %>
        </small>
      <% end %>
    <% end %>
  <% end %>
</div>
