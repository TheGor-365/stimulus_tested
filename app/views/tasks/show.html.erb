<%= render @task %>
<%= link_to "Details", task_calendar_path(@task), class: "text-success" %>

<div class="mt-3">
  <%= link_to "Edit this task", edit_task_path(@task) %><br>
  <%= link_to "Back to tasks", tasks_path, class: "text-secondary" %><br>
  <%= button_to "Destroy this task", @task, method: :delete, class: "m-0 p-0 btn btn-link text-danger text-decoration-none" %>
</div>
